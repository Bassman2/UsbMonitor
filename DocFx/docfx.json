{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Src/FormsUsbMonitor90",
          "files": [ "**/*.csproj" ]
        }
      ],
      "dest": "forms"
    },
	{
      "src": [
		{
          "src": "../Src/WpfUsbMonitor90",
          "files": [ "**/*.csproj" ]
        }
      ],
      "dest": "wpf"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.{md,yml}" ]        
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],
    "output": "../docs",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
	  "_appLogoPath": "images/bassman.svg",
	  "_appFaviconPath": "images/bassman.ico",
      "_appName": "UsbMonitor",
      "_appTitle": "UsbMonitor",
	  "_appFooter": "Copyright 2025 Â© by Ralf Beckers",
      "_enableSearch": true,
      "pdf": false
    }
  }
}